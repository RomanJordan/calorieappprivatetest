<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General Settings">

        <EditTextPreference
            app:key="nameKey"
            app:title="Enter Your Name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="heightKey"
            app:title="Enter Your Height in CM"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="weightKey"
            app:title="Enter Your Weight in LBs"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>